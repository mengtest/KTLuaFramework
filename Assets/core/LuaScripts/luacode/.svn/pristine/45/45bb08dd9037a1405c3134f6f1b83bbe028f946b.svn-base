            self.m_uafsm:change_state(UAFsm.MAIN_ACT.MOVE)
        end
    end)
	
    local world = self:getFrame("world")

    self.m_target_dir = self:get_dir()
    -- 目标朝向
    self.m_is_syncing_dir = false
    -- 同步角度开关
