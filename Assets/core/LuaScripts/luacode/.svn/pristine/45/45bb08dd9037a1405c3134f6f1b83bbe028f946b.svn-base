function M:calc_back()
    local state = self:get_move_state()

    if state == M.MOVE_STATE.R_BACK
    or state == M.MOVE_STATE.BACK
    or state == M.MOVE_STATE.L_BACK then
        return true
    else
        return false
    end
end
Attribute.calc(M, "back", M.calc_back, "move_state")

