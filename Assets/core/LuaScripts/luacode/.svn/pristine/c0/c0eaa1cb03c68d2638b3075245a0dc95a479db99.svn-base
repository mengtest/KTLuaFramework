---点击按钮的回调
function fashionable_dress_attr_show_view:click_btn_callback(press_btn)
    for k, v in pairs(self.m_btn_list) do
        if v['btn'] == press_btn then
            v['show'].gameObject:SetActive(true)
        else
            v['show'].gameObject:SetActive(false)
        end
    end
end

function fashionable_dress_attr_show_view:add_btn_list(btn, show)
    self.m_btn_list[#self.m_btn_list + 1] = { ['btn'] = btn, ['show'] = show }
end

return fashionable_dress_attr_show_view